<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_item_layout_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_20"
        android:backgroundTint="?colorSecondaryContainer">

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/item_divider"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_alignBottom="@id/number_of_seats"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:dividerColor="?colorOnSecondaryContainer" />

        <TextView
            android:id="@+id/origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/item_divider"
            android:layout_toStartOf="@id/btn_delete_event"
            android:text="Origem: Salvador"
            android:textColor="?colorOnSecondaryContainer"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/departure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/origin"
            android:layout_toEndOf="@id/item_divider"
            android:layout_toStartOf="@id/btn_delete_event"
            android:text="SaÃ­da: 14h30"
            android:textColor="?colorOnSecondaryContainer"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/number_of_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/departure_time"
            android:layout_toEndOf="@id/item_divider"
            android:layout_toStartOf="@id/btn_delete_event"
            android:text="Total de assentos: 36"
            android:textColor="?colorOnSecondaryContainer"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_delete_event"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:icon="@drawable/baseline_delete_24"
            app:iconTint="?colorOnSecondaryContainer" />
    </RelativeLayout>
</RelativeLayout>